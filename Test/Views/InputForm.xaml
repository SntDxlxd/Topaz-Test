<!-- Views/InputForm.xaml -->
<Window x:Class="Test.Views.InputForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="InputForm" Height="200" Width="300">
    <StackPanel Margin="10">
        <TextBox Name="InputTextBox" Width="200" Margin="0,0,0,10" />
        <Button Name="OkButton" Content="OK" Width="100" IsEnabled="False" Click="OkButton_Click" />
    </StackPanel>
</Window>
